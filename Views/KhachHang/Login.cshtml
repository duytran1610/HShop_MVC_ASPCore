@model HShop.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Login</h1>
        <form asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <div class="form-item">
                        <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MaKh" class="form-control">
                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup>*</sup>
                        <input asp-for="@Model.MatKhau" class="form-control">
                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Login</button>
                        <a asp-controller="KhachHang" asp-action="ForgetPassword" class="btn border-danger">Forget Password</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

